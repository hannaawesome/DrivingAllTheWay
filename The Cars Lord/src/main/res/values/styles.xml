<resources>

    <!-- Base application theme. -->
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="actionBarStyle">@color/primary_darker</item>
        <item name="actionBarTheme">@color/primary_darker</item>
        <item name="actionBarTabStyle">@color/primary_darker</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>

    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/primary_darker</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/jet</item>
        <!--dialog background-->
        <item name="android:windowBackground">@color/accent</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/primary_darker</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/jet</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/dialog_drawable</item>

        <!--dialog text-->
            <item name="android:textAppearance">@color/iconDarkGrey</item>
        <item name="android:textColor">@color/iconDarkGrey</item>
        <item name="editTextColor">@color/iconDarkGrey</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Light">

        <item name="android:textColorPrimary">@color/iconVeryDarkGrey</item>
        <item name="colorPrimary">@color/iron</item>
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <item name="colorAccent">@color/primary_darker</item>

    </style>


</resources>